<% content_for :modal do %>
  <div class="modal fade" id="myModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true" style="display: none;">
    <div class="modal-dialog">
      <div class="modal-content">
        <div class="modal-header">
          <button type="button" class="close" data-dismiss="modal"><span aria-hidden="true">×</span><span class="sr-only">Close</span></button>
          <h4 class="modal-title" id="myModalLabel">この本をほしいな！しているユーザ</h4>
        </div>
        <div class="modal-body">
          <% book.wishes.where(reject: false).each do |wish| %>
            <% animal = Animal.find(wish.user.icon).name %>
            <div class="user-info">
              <%= image_tag(icon(animal), class: "#{icon_style(animal)}") %>
              <span><%= link_to book_wish_path(book, wish) do %><%= wish.user.username %><% end %></span>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
<% end %>
