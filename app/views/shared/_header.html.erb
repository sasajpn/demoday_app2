<div class="header-container">
  <div class="header-top dark ">
    <div class="container">
      <div class="row">
        <div class="col-xs-3 col-sm-6 col-md-3">
          <% if user_signed_in? %>
            <div class="user-info">
              <% animal = Animal.find(current_user.icon).name %>
              <%= image_tag(icon(animal), class: "#{icon_style(animal)}", size: "40x40", align: "middle") %>
              <span><%= current_user.username %></span>
            </div>
          <% end %>
        </div>
        <div class="col-xs-9 col-sm-6 col-md-9">
          <div id="header-top-second" class="clearfix">
            <div class="header-top-dropdown text-right">
              <% if user_signed_in? %>
                <%= link_to user_path(current_user), class:"btn btn-default btn-sm" do %><i class="fa fa-user pr-10"></i> マイページ<% end %>
                <%= link_to destroy_user_session_path, method: :delete, class: "btn dropdown-toggle btn-default btn-sm" do %><i class="fa fa-unlock-alt pr-10"></i> ログアウト<% end %>
              <% else %>
                <div class="btn-group">
                <%= link_to new_user_registration_path, class:"btn btn-default btn-sm" do %><i class="fa fa-user pr-10"></i> 新規登録<% end %>
                <%= link_to new_user_session_path, class: "btn btn-default btn-sm" do %><i class="fa fa-lock pr-10"></i> ログイン<% end %>
                </div>
              <% end %>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
