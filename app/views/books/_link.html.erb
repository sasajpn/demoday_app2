<%= link_to "交渉を取り消す", negotiate_path(other), class: "btn btn-danger btn-sm",method: :delete, data: { confirm: 'ほしいね！を取り消してもよろしいですか？' } if current_user.already_want?(object) %>
<%= link_to "取引ページ", negotiate_trades_path(object.set_negotiate), class:"btn btn-gray btn-sm" if current_user.mine?(object) && object.status.between?(3,6) %>
