<div class="book-box">
  <div class="listing-item mb-20 book-image">
    <div class="overlay-container">
      <%= image_tag(object.image, style: "width: 250px; height: 350px;") unless object.image.blank? %>
      <%= image_tag('no-image.png', style: "width: 250px; height: 350px;") if object.image.blank? %>
    </div>
    <div class="book-info">
      <h3><%= object.title.truncate(15) %></h3>
      <small><%= object.author.truncate(15) %></small>
      <hr />
      <div class="elements-list clearfix">

        <%= render 'books/update_form', object: object, num: 1 if num == 0 %>
        <%= render 'books/link', object: object, num: num %>
        <div class="book-bottom"></div>
        <div class="book-bottom"><%= finish_eval(object, num) %></div>
      </div>
    </div>
  </div>
</div>
