<div class="col-md-4 col-sm-8 col-xs-10 col-md-offset-4 col-sm-offset-2 col-xs-offset-1">
  <%= bootstrap_form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: "form-horizontal text-left" }, inline_errors: false) do |f| %>
    <%= f.text_field :username, hide_label: true, placeholder: 'ユーザネーム' %>
    <%= f.password_field :password, autocomplete: "off", hide_label: true, placeholder: 'パスワード' %>
    <% if devise_mapping.rememberable? -%>
      <div class="field">
        <%= f.check_box :remember_me, label: '保存する' %>
      </div>
    <% end -%>
    <%= f.submit 'ログイン' %>
    <br>
    <p>まだアカウントを持っていませんか？<%= link_to new_registration_path(resource_name) do %>新規登録<% end %></p>
    <p>パスワードを忘れましたか？<%= link_to new_password_path(resource_name) do %>再設定<% end %></p>
  <% end %>
</div>
