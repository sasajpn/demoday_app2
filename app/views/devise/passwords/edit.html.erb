<%= bootstrap_form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put, class: "form-horizontal text-left" }) do |f| %>
  <%= devise_error_messages! %>
  <%= f.password_field :password, autocomplete: "off", class: "form-control" %>
  <%= f.password_field :password_confirmation, autocomplete: "off", class: "form-control" %>
  <%= f.submit 'パスワードを再設定する' %>
  <br>
<% end %>
<p>既にアカウントをお持ちですか？<%= link_to new_session_path(resource_name) do %>ログイン<% end %></p>
