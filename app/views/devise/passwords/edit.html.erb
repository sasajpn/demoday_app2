<h2 class="title text-left">パスワード再発行</h2>
<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put, class: "form-horizontal text-left" }) do |f| %>
  <div class="form-group has-feedback">
    <%= f.label :password, class: "col-sm-3 control-label" %>
    <div class="col-sm-8">
      <%= f.password_field :password, autocomplete: "off", class: "form-control" %>
      <i class="fa fa-lock form-control-feedback"></i>
    </div>
  </div>
  <div class="form-group has-feedback">
    <%= f.label :password_confirmation, class: "confirmation col-sm-3 control-label" %>
    <div class="col-sm-8">
      <%= f.password_field :password_confirmation, autocomplete: "off", class: "form-control" %>
      <i class="fa fa-lock form-control-feedback"></i>
    </div>
  </div>
  <div class="form-group">
    <div class="col-sm-offset-3 col-sm-8">
      <%= button_tag type: "submit", class: "btn btn-group btn-default btn-animated" do %>
        再設定する<i class="fa fa-check"></i>
      <% end %>
      <p>既にアカウントをお持ちですか？<%= link_to new_session_path(resource_name) do %>ログイン<% end %></p>
    </div>
  </div>
<% end %>
