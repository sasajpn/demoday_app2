<h2 class="title text-left">新規登録</h2>
<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { class: "form-horizontal text-left"}) do |f| %>
  <%= devise_error_messages! %>
  <div class="form-group has-feedback">
    <%= f.label :username, class: "col-sm-3 control-label" %>
    <div class="col-sm-8">
      <%= f.text_field :username, autofocus: true, class: "form-control" %>
      <i class="fa fa-user form-control-feedback"></i>
    </div>
	</div>
	<div class="form-group has-feedback">
    <%= f.label :email, class: "col-sm-3 control-label" %>
    <div class="col-sm-8">
      <%= f.email_field :email, autofocus: true, class: "form-control" %>
      <i class="fa fa-envelope form-control-feedback"></i>
    </div>
	</div>
  <div class="form-group has-feedback">
    <%= f.label :birthday, class: "col-sm-3 control-label" %>
    <div class="col-sm-8">
      <%= f.date_field :birthday, class: "form-control" %>
      <i class="fa fa-gift form-control-feedback"></i>
    </div>
  </div>
	<div class="form-group has-feedback">
    <%= f.label :password, class: "col-sm-3 control-label" %>
    <div class="col-sm-8">
      <%= f.password_field :password, autocomplete: "off", class: "form-control" %>
      <i class="fa fa-lock form-control-feedback"></i>
    </div>
	</div>
	<div class="form-group has-feedback">
    <%= f.label :password_confirmation, class: "col-sm-3 control-label" %>
    <div class="col-sm-8">
      <%= f.password_field :password_confirmation, autocomplete: "off", class: "form-control" %>
      <i class="fa fa-lock form-control-feedback"></i>
    </div>
	</div>
  <div class="form-group">
    <div class="col-sm-offset-3 col-sm-8">
      <%= button_tag type: "submit", class: "btn btn-group btn-default btn-animated" do %>
        新規登録<i class="fa fa-check"></i>
      <% end %>
      <p>既にアカウントをお持ちですか？<%= link_to new_session_path(resource_name) do %>ログイン<% end %></p>
    </div>
  </div>
<% end %>
