<div class="main">
  <div class="row">
  	<div class="col-md-8 col-md-offset-2">
  		<div class="testimonial text-center">
  			<div class="testimonial-image">
          <% animal = Animal.find(current_user.icon).name %>
          <%= image_tag(icon(animal), class: "#{icon_style(animal)}") %>
  			</div>
  			<h2><%= current_user.username %></h2>
  			<div class="separator"></div>
  		</div>
  	</div>
    <div class="col-md-3 col-sm-6 col-xs-6">
      <div class="menu-box">
        <div class="menu-item">
          <div class="menu-content">
            <p>登録した本</p>
            <p><%= current_user.books.size %>冊</p>
          </div>
          <%= link_to '', user_books_path(current_user), class: 'menu-link' %>
        </div>
      </div>
    </div>
    <div class="col-md-3 col-sm-6 col-xs-6">
      <div class="menu-box">
        <div class="menu-item">
          <div class="menu-content">
            <p><i class="fa fa-plus fa-2x px-10"></i></p>
            <p>本の登録</p>
          </div>
          <%= link_to '', new_user_book_path(current_user), class: 'menu-link' %>
        </div>
      </div>
    </div>
    <div class="col-md-3 col-sm-6 col-xs-6">
      <div class="menu-box">
        <div class="menu-item">
          <div class="menu-content">
            <p><i class="fa fa-star fa-2x px-10"></i></p>
            <p>ほしいもの<br>リスト</p>
          </div>
          <%= link_to '', user_wish_lists_path(current_user), class: 'menu-link' %>
        </div>
      </div>
    </div>
    <div class="col-md-3 col-sm-6 col-xs-6">
      <div class="menu-box">
        <div class="menu-item">
          <div class="menu-content">
            <p><i class="fa fa-user-circle fa-2x px-10"></i></p>
            <p>登録情報</p>
          </div>
          <%= link_to '', edit_user_path(current_user), class: 'menu-link' %>
        </div>
      </div>
    </div>
  </div>

  <div class="alert  alert-icon alert-info" role="alert">
		<i class="fa fa-info-circle"></i>
    交換が決まった本
	</div>
  <div class="row grid-space-10">
		<div class="col-xs-4 col-md-6">
			<div class="overlay-container mb-10">
        
			</div>
		</div>
		<div class="col-xs-4 col-md-6">
			<div class="overlay-container mb-10">
			</div>
		</div>
	</div>
</div>
