<% if negotiates.any? %>
  <% negotiates.each do |negotiate| %>
    <div class="image-box style-3 mb-20 bordered light-gray-bg">
      <div class="row grid-space-0">
        <div class="col-md-3 book-image">
          <div class="overlay-container">
            <div class="set-top">
              <% animal = Animal.find(negotiate.child_user.icon).name %>
              <%= image_tag(icon(animal), class: "#{icon_style(animal)}", size: "40x40", align: "middle") %>
            </div>
            <%= image_tag(negotiate.image, style: "width: 250px; height: 350px;") unless negotiate.image.blank? %>
            <%= image_tag('no-image.png', style: "width: 250px; height: 350px;") if negotiate.image.blank? %>
          </div>
        </div>
        <div class="col-md-9">
          <div class="body">
            <div class="pv-30 visible-lg"></div>
            <h4><%= negotiate.title %></h4>
            <p class="small mb-10"><%= negotiate.author %></p>
            <span class="label label-default">本の状態:<%= negotiate.child.condition_i18n %></span>
            <div class="separator-2"></div>
            <p><%= negotiate.recommend if negotiate.recommend? %></p>
            <%= render 'update_form', negotiate: negotiate unless @book.status == 3 %>
          </div>
        </div>
      </div>
    </div>
  <% end %>
<% else %>
  <div class="alert alert-warning">交渉がまだありません。</div>
<% end %>
