<%= bootstrap_form_for [object, current_user.evaluators.build] do |f| %>
    <%= f.hidden_field :evaluatee_id, value: evaluatee.id %>
    <%= f.select :level, Eval.levels_i18n.invert %>
    <%= fields_for(object) do |af| %>
      <%= af.hidden_field :status, value: num %>
    <% end %>
